<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    android:backgroundTint="#3F51B5"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="86dp"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="JOGADOR 1"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <Space
                android:layout_width="101dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:fontFamily="monospace"
                android:text="JOGADOR 2"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_jogador1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Nome jogador 1" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_jogador2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome jogador 2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="19dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="79dp"
                android:layout_height="20dp"
                android:fontFamily="monospace"
                android:text="VITÓRIAS"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="79dp"
                android:layout_height="20dp"
                android:fontFamily="monospace"
                android:text="VITÓRIAS"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <TextView
                android:id="@+id/tv_placar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placar 1" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_placar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placar 2" />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="277dp"
        android:layout_height="214dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:backgroundTint="#313860"
                android:text="" />

            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:backgroundTint="#313860"
                android:text="" />

            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:backgroundTint="#313860"
                android:text="" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:backgroundTint="#313860"
                android:text="" />

            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:backgroundTint="#313860"
                android:text="" />

            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:backgroundTint="#313860"
                android:text="" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:backgroundTint="#313860"
                android:text="" />

            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:backgroundTint="#313860"
                android:text="" />

            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="75dp"
                android:layout_height="60dp"
                android:backgroundTint="#313860"
                android:text="" />
        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_jogador1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#FFEB3B"
                android:fontFamily="monospace"
                android:text="Jogador 1 (X)"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_jogador2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:backgroundTint="#FFEB3B"
                android:fontFamily="monospace"
                android:text="Jogador 2 (O)"
                android:textSize="12sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btn_newgame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="613dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#FFEB3B"
        android:fontFamily="monospace"
        android:text="New Game"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>